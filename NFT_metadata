/*
Assessment Requirements
1. Create a variable that can hold a number of NFT's. What type of variable might this be? Array
2. Create an object inside your mintNFT function that will hold the metadata for your NFTs. 
   The metadata values will be passed to the function as parameters. When the NFT is ready, 
   you will store it in the variable you created in step 1
3. Your listNFTs() function will print all of your NFTs metadata to the console (i.e. console.log("Name: " + someNFT.name))
4. For good measure, getTotalSupply() should return the number of NFT's you have created
*/

// create a variable to hold your NFT's
let NFTs = []


// this function will take in some values as parameters, create an
// NFT object using the parameters passed to it for its metadata, 
// and store it in the variable above.
function mintNFT1 (_name, _colorway, _orientation, _chain, _unitPrice) {
    let NFT1 = {
            "Name": _name,
            "Colorway": _colorway,
            "Orientation": _orientation,
            "Chain": _chain,
            "ETH": _unitPrice

    }
    NFTs.push(NFT1)
    }

function mintNFT2 (_name, _colorway, _orientation, _chain, _unitPrice) {
    let NFT2 = {
            "Name": _name,
            "Colorway": _colorway,
            "Orientation": _orientation,
            "Chain": _chain,
            "ETH": _unitPrice
        }
    NFTs.push(NFT2)
    }

function mintNFT3 (_name, _colorway, _orientation, _chain, _unitPrice) {
    let NFT3 = {
            "Name": _name,
            "Colorway": _colorway,
            "Orientation": _orientation,
            "Chain": _chain,
            "ETH": _unitPrice
        }
    NFTs.push(NFT3)
    }

function mintNFT4 (_name, _colorway, _orientation, _chain, _unitPrice) {
    let NFT4 = {
            "Name": _name,
            "Colorway": _colorway,
            "Orientation": _orientation,
            "Chain": _chain,
            "ETH": _unitPrice
        }
    NFTs.push(NFT4)
    }

function mintNFT5 (_name, _colorway, _orientation, _chain, _unitPrice) {
    let NFT5 = {
            "Name": _name,
            "Colorway": _colorway,
            "Orientation": _orientation,
            "Chain": _chain,
            "ETH": _unitPrice
        }
    NFTs.push(NFT5)
    }

// create a "loop" that will go through an "array" of NFT's
// and print their metadata with console.log()
function listNFTs () {
    for (let i = 0; i < NFTs.length; i++) {
        console.log("\nName: " + NFTs[i].Name);
        console.log("\nColorway: " + NFTs[i].Colorway);
        console.log("Orientation: " + NFTs[i].Orientation);
        console.log("Chain: " + NFTs[i].Chain);
        console.log("ETH: " + NFTs[i].ETH);
}
}

// print the total number of NFTs we have minted to the console
function getTotalSupply() {
    console.log(NFTs.length)
}

// call your functions below this line
mintNFT1("SpongeBob", "Yellow & Brown", "Vertical", "Ethereum", 0.005);
mintNFT2("Patrick", "Pink & Green", "Vertical", "Ethereum", 0.005);
mintNFT3("Squidward", "Blue & Brown", "Vertical", "Ethereum", 0.005);
mintNFT4("Mr. Krabs", "Red & Blue", "Vertical", "Ethereum", 0.005);
mintNFT5("Plankton", "Green & Yellow", "Vertical", "Ethereum", 0.005);
listNFTs()
getTotalSupply()
